<h1>Types</h1>
<%= link_to 'New Type', new_type_path %>

<ul>
  <% @types.each do |type| %>
    <li>
      <%= type.name %>
      <%= image_tag(type.icon) if type.icon.attached? %>
      <%= link_to 'Edit', edit_type_path(type) %> |
      <%= link_to 'Delete', type, method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>
