<div class="max-w-md mx-auto p-6 bg-bark-500 shadow-lg rounded-md backdrop-blur-md mt-20">
  <h2 class="text-3xl font-bold text-center text-white mb-6">Welcome Back</h2>
  <%= form_with(url: account_session_path, method: :post, local: true, class: 'space-y-4') do |f| %>
    <div>
      <%= f.label :username, class: 'block text-sm font-medium text-white' %>
      <%= f.text_field :username, autofocus: true, class: 'mt-1 block w-full px-3 py-2 border border-black rounded-md shadow-sm focus:outline-none focus:ring-emerald-500 focus:border-emerald-500 bg-emerald-50' %>
    </div>

    <div>
      <%= f.label :password, class: 'block text-sm font-medium text-white' %>
      <%= f.password_field :password, autocomplete: 'current-password', class: 'mt-1 block w-full px-3 py-2 border border-black rounded-md shadow-sm focus:outline-none focus:ring-emerald-500 focus:border-emerald-500 bg-emerald-50' %>
    </div>

    <div class="flex items-center">
      <%= f.check_box :remember_me, class: 'h-4 w-4 text-emerald-600 focus:ring-emerald-500 border-emerald-300 rounded' %>
      <%= f.label :remember_me, class: 'ml-2 block text-sm text-white' %>
    </div>

    <div>
      <%= f.submit 'Log in', class: 'w-full py-2 px-4 border border-transparent rounded-md shadow-sm text-white bg-emerald-600 hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-emerald-500' %>
    </div>

    <div class="text-center">
      <%= link_to 'Forgot your password?', new_account_password_path, class: 'text-sm text-white hover:text-emerald-400' %>
    </div>

    <div class="text-center">
      <%= link_to 'Sign Up', new_account_registration_path, class: 'text-sm text-white hover:text-emerald-400' %>
    </div>
  <% end %>
</div>
